<h1>Listing items</h1>


<div ng-controller="TodoController" >

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Due date</th>
          <th>Priority</th>
          <th>Done</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>

      <tr ng-repeat="theItem in myData.items">
        <td>{{theItem.name}}</td>
        <td>{{theItem.due_date}}</td>
        <td>{{theItem.priority}}</td>
        <td>{{theItem.done}}</td>
        <td>{{theItem.description}}</td>
      </tr>


      </tbody>
    </table>

</div>

<br>

<%= link_to 'New Item', new_item_path %>
